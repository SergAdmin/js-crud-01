<main class="main">
    {{#with data}}
        <form method="POST" action="/purchase-submit?id={{id}}" class="form-card">
            {{>heading title="Ваше замовлення"}}

            <ul class="cart">
                {{#each cart}}
                    <li class="cart__item">
                        <span>{{text}}</span>
                        <span>{{price}} грн</span>
                    </li>
                {{/each}}            
            </ul>

            {{>divider}}

            {{>heading title="Оформити замовлення"}}

            <div class="card">

                {{>field label="Ім'я" name="firstname"}}

                {{>field label="Прізвище" name="lastname"}}
            </div>  
              
            <div class="card">
                {{>field label="Телефон" name="phone"}}

                {{>field label="Пошта" name="email"}}
            </div>

            

            {{>field label="Коментар" name="comment"}}

            {{>field label="Списати бонуси" name="bonus" value=bonus}}

            {{>field label="Промо-код" name="promocode"}}

            {{>divider}}

            {{>field label="totalPrice" name="totalPrice" value=totalPrice disabled=true}} 
            {{>field label="productPrice" name="productPrice" value=productPrice disabled=true}}
            {{>field label="deliveryPrice" name="deliveryPrice" value=deliveryPrice disabled=true}}
            {{>field label="amount" name="amount" value=amount disabled=true}}


            <strong class="form-card__total">
                Всього: {{totalPrice}} грн ({{bonus}} грн бонусів)                                         
            </strong>

            {{>button text="Оформити замовлення"}}

        </form>
    {{/with}}
</main>